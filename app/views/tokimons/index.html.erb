<body>
<p id="notice"><%= notice %></p>

<br><br><br>
<div class="text-center">
<!-- <p id="tokiheader">Tokidex</p> -->
<img src="Tokidex.png">
<br><br>
<table align="center">
<div>
  <thead>
    <tr>
      <th>Name</th>
      <th>Body Type</th>
      <th>Weight</th>
      <th>Height</th>
      <th>Fly</th>
      <th>Fight</th>
      <th>Fire</th>
      <th>Water</th>
      <th>Electric</th>
      <th>Ice</th>
      <th>Total</th>
      <th>Trainer</th>
      <th colspan="3">Links</th>
    </tr>
  </thead>

  <tbody>
    <% @tokimons.each do |tokimon| %>
      <div class='tableFont'>
      <tr>
        <td><%= tokimon.name %></td>
        <td> <%= image_tag(tokimon.bodytype, size: "70x40") %> </td>
        <td><%= tokimon.weight %></td>
        <td><%= tokimon.height %></td>
        <td><%= tokimon.fly %></td>
        <td><%= tokimon.fight %></td>
        <td><%= tokimon.fire %></td>
        <td><%= tokimon.water %></td>
        <td><%= tokimon.electric %></td>
        <td><%= tokimon.ice %></td>
        <td><%= tokimon.total%></td>
        <td><%= link_to @trainers.find(tokimon.trainer_id).name, @trainers.find(tokimon.trainer_id) %></td>
        <td><%= link_to 'Stats', tokimon %></td>
        <td><%= link_to 'Edit', edit_tokimon_path(tokimon) %></td>
        <td><%= link_to 'Release', tokimon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </div>
    <% end %>
  </tbody>
</table>
<br>
<div class='rubybutton'>
<%= link_to 'New Tokimon', new_tokimon_path %> |
<%= link_to 'Trainer Roster', trainers_path %> |
<%= link_to 'New Trainer', new_trainer_path %>
</div>
<br>
</div>
</body>
