<body>
<br><br><br>
<div class="text-center">
<p id="notice"><%= notice %></p>

<h1>
  <strong>Trainer:</strong>
  <%= @trainer.name %>
</h1>
<p class="att2">
  <strong>Level:</strong>
  <%= @trainer.level %>
</p>

<div class="rubybutton">
<%= link_to 'Edit Trainer', edit_trainer_path(@trainer) %> |
<%= link_to 'Destroy Trainer', @trainer, method: :delete, data: { confirm: 'Are you sure?' } %>
<h3> <%= @trainer.name %>'s Tokimon: </h3>
<table align="center">
<div>
  <thead>
    <tr>
      <th>Name</th>
      <th>Body Type</th>
      <th>Weight</th>
      <th>Height</th>
      <th>Fly</th>
      <th>Fight</th>
      <th>Fire</th>
      <th>Water</th>
      <th>Electric</th>
      <th>Ice</th>
      <th>Total</th>
      <th colspan="3">Links</th>
    </tr>
  </thead>
</thead>

<tbody>
  <% @alltokimons.each do |tokimon| %>
    <tr>
      <td><%= tokimon.name %></td>
      <td><%= image_tag(tokimon.bodytype, size: "70x40") %></td>
      <td><%= tokimon.weight %></td>
      <td><%= tokimon.height %></td>
      <td><%= tokimon.fly %></td>
      <td><%= tokimon.fight %></td>
      <td><%= tokimon.fire %></td>
      <td><%= tokimon.water %></td>
      <td><%= tokimon.electric %></td>
      <td><%= tokimon.ice %></td>
      <td><%= tokimon.total%></td>
      <td><%= link_to 'Stats', tokimon %></td>
      <td><%= link_to 'Edit', edit_tokimon_path(tokimon) %></td>
      <td><%= link_to 'Release', tokimon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>

<br>
<div class="rubybutton">
<%= link_to 'Back to Trainers', trainers_path %> |
<%= link_to 'Back to Tokidex', tokimons_path %>
</div>
<br>
</div>
</div>
</body>
